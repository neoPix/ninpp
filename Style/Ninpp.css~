/*Animations*/

body .delayed{
visibility:hidden;
opacity:0;
-webkit-transition:visibility 0s linear 0.5s,opacity 0.5s linear;
   -moz-transition:visibility 0s linear 0.5s,opacity 0.5s linear;
     -o-transition:visibility 0s linear 0.5s,opacity 0.5s linear;
        transition:visibility 0s linear 0.5s,opacity 0.5s linear;
}
body .delayed.rotateIn{
-webkit-transform:rotate(360deg);
   -moz-transform:rotate(360deg);
    -ms-transform:rotate(360deg);
     -o-transform:rotate(360deg);
        transform:rotate(360deg);
-webkit-transition:transform 0.5s ease-in-out 0s,visibility 0s linear 0.5s,opacity 0.5s linear;
   -moz-transition:transform 0.5s ease-in-out 0s,visibility 0s linear 0.5s,opacity 0.5s linear;
     -o-transition:transform 0.5s ease-in-out 0s,visibility 0s linear 0.5s,opacity 0.5s linear;
        transition:transform 0.5s ease-in-out 0s,visibility 0s linear 0.5s,opacity 0.5s linear;
}
body .delayed.on{
visibility:visible;
opacity:1;
-webkit-transition-delay:0s;
   -moz-transition-delay:0s;
     -o-transition-delay:0s;
        transition-delay:0s;
}
body .delayed.rotateIn.on{
-webkit-transform:rotate(0);
   -moz-transform:rotate(0);
    -ms-transform:rotate(0);
     -o-transform:rotate(0);
        transform:rotate(0);
}
